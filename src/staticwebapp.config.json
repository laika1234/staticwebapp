{
    "routes": [
      {
        "route": "/login",
        "allowedRoles": [ "anonymous" ],
        "rewrite": "/.auth/login/b2c"
      },
      {
        "route": "/logout",
        "allowedRoles": [ "authenticated" ],
        "rewrite": "/.auth/logout"
      }
    ],
    "responseOverrides": {
      "401": {
        "statusCode": 302,
        "redirect": "/"
      }
    },
    "navigationFallback": {
      "rewrite": "index.html",
      "exclude": [ "/_framework/*", "/css/*" ]
    },
    "globalHeaders": {
      "Access-Control-Allow-Origin": "*",
      "Access-Control-Allow-Methods": "GET, OPTIONS"
    },
    "auth": {
        "rolesSource": "/api/function1",
        "identityProviders": {
          "customOpenIdConnectProviders": {
            "b2c": {
              "registration": {
                "clientIdSettingName": "B2C_CLIENT_ID",
                "clientCredential": {
                  "clientSecretSettingName": "B2C_CLIENT_SECRET"
                },
                "openIdConnectConfiguration": {
                  "wellKnownOpenIdConfiguration": "https://TomTestB2C.b2clogin.com/TomTestB2C.onmicrosoft.com/B2C_1_swasignupsignin/v2.0/.well-known/openid-configuration"
                }
              },
              "login": {
                "loginParameterNames":[
                      "resource=https://TomTestB2C.onmicrosoft.com/demoapi2"],
                "nameClaimType": "emails",
                "scopes": [ "openid" ]       
              }
            }
          }
        }
      }
  }